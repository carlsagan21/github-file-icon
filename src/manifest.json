{
  "manifest_version": 2,
  "name": "File Icon for GitHub, GitLab and Bitbucket",
  "author": "xxhomey19",
  "applications": {
    "gecko": {
      "id": "{85860b32-02a8-431a-b2b1-40fbd64c9c69}"
    }
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://gitlab.com/*",
        "https://bitbucket.org/*",
        "https://*.gogs.io/*",
        "https://*.gitea.io/*"
      ],
      "js": ["contentscript.bundle.js"],
      "css": ["contentscript.css"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": "img/icon-64.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "64": "img/icon-64.png",
    "128": "img/icon-128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "web_accessible_resources": ["*.woff2"],
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "https://github.com/*",
    "https://gitlab.com/*",
    "https://bitbucket.org/*",
    "https://*.gogs.io/*",
    "https://*.gitea.io/*"
  ]
}
